[Unit]
Description=Druid Coordinator Node

[Service]
Type=simple
WorkingDirectory=/etc/druid/coordinator/
ExecStart=/usr/bin/java <%= @jvm_opts.join(' ') %> -classpath .:/usr/local/lib/druid/lib/* io.druid.cli.Main server coordinator
SuccessExitStatus=130 143
Restart=on-failure

[Install]
WantedBy=multi-user.target
